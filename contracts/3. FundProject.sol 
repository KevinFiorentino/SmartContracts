pragma solidity >=0.7.0 <0.9.0;

contract FundProject {

    uint goal;
    uint totalFunded;
    bool isFundable;
    address payable owner;

    constructor() {
        goal = 0;                           // 1 ETH = 1^18 = 1000000000000000000
        owner = payable(msg.sender);
        totalFunded = 0;
        isFundable = true;
    }

    modifier onlyOwner {
        require(
            msg.sender == owner,
            "You need to be the owner from this contract to change the goal."
        );
        _;
    }

    modifier notIsOwner {
        require(
            msg.sender != owner,
            "The project owner can not add founds to the project."
        );
        _;
    }

    function setGoal(uint g) public onlyOwner {
        goal = g;
    }

    function addFounds() public notIsOwner payable {
        owner.transfer(msg.value);
        totalFunded += msg.value;
    }
    
}